{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"quotes": ["error", "double", {"allowTemplateLiterals": true}],
		"object-curly-spacing": ["error", "never"],
		"no-var": "error",
		"prefer-const": "warn",
		"no-unused-vars": ["off", {"argsIgnorePattern": "."}],
		"no-undef": "off",
		"eqeqeq": "warn",
		"indent": ["error", 4, {"SwitchCase": 1}]
	}
}
